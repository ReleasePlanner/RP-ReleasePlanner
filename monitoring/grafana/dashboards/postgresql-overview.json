{
  "dashboard": {
    "title": "PostgreSQL Overview",
    "tags": ["postgresql", "database"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"releaseplanner\"}",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Database Size",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname=\"releaseplanner\"} / 1024 / 1024 / 1024",
            "legendFormat": "Database Size (GB)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "decbytes", "label": "Size"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Transactions per Second",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit{datname=\"releaseplanner\"}[5m]) + rate(pg_stat_database_xact_rollback{datname=\"releaseplanner\"}[5m])",
            "legendFormat": "Transactions/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "TPS"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Query Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(pg_stat_database_tup_fetched{datname=\"releaseplanner\"}[5m])",
            "legendFormat": "Tuples Fetched/sec",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_tup_inserted{datname=\"releaseplanner\"}[5m])",
            "legendFormat": "Tuples Inserted/sec",
            "refId": "B"
          },
          {
            "expr": "rate(pg_stat_database_tup_updated{datname=\"releaseplanner\"}[5m])",
            "legendFormat": "Tuples Updated/sec",
            "refId": "C"
          },
          {
            "expr": "rate(pg_stat_database_tup_deleted{datname=\"releaseplanner\"}[5m])",
            "legendFormat": "Tuples Deleted/sec",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Operations/sec"},
          {"format": "short"}
        ]
      }
    ]
  }
}

